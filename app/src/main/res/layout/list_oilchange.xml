<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#848081"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:orientation="horizontal"
                android:padding="5dp">

                <!-- Texto para Número de Factura -->
                <TextView
                    android:id="@+id/tvListOilChange"
                    android:layout_width="168dp"
                    android:layout_height="32dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Fecha de Cambio"
                    android:textSize="14sp" />

                <!-- Texto para Categoría -->
                <TextView
                    android:id="@+id/tvListKilometer"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Kilometraje"
                    android:textSize="14sp" />
            </GridLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="49dp"
            android:layout_height="47dp"
            app:srcCompat="@mipmap/ic_aceite_foreground"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="-3dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
