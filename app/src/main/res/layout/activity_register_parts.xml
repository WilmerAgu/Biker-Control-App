<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/fondo_degradado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPartsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_logo_foreground" />

    <ImageView
        android:id="@+id/ivAceite"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_aceite_foreground" />

    <ImageView
        android:id="@+id/ivLlanta"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_llanta1_foreground" />

    <ImageView
        android:id="@+id/ivLFreno"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/ivAceite"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_freno_foreground" />

    <ImageView
        android:id="@+id/ivFiltroAire"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/ivAceite"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_filtro_aire1_foreground" />
    <ImageView
        android:id="@+id/ivKitArrastre"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/ivFiltroAire"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_kit_arratre_foreground" />


</RelativeLayout>